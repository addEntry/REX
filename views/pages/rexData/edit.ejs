<div class="jumbotron text-center">
    <h1>Editing "<%= event.name %>"</h1>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">

        <% if (errors.length > 0) { %>
            <div class="alert alert-danger">
                <% for (error of errors) { %>
                    <%= error %><br />
                        <% } %>
            </div>
            <% } %>

                <form action="/events/<%= event.nameUrl %>" method="post">

                    <div class="form-group">
                        <label>Client</label>
                        <input type="text" name="name" class="form-control" value="<%= event.name %>" />

                        <div class="form-group">
                            <label>Project</label>
                            <input type="text" name="project" class="form-control" value="<%= event.project %>" />
                        </div>

                        <div id="selgroup">

                            <div class="form-group">
                                <label>Seller</label>
                                <select name="seller" id="seller">
                                  <option selected="selected"><%= event.seller %></option>
                                  <option value="">-</option>
                                  <option value="Pierre">Pierre</option>
                                  <option value="Esteve">Esteve</option>
                                  <option value="Julien">Julien</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Project manager</label>
                                <select name="proman" id="proman">
                                  <option selected="selected"><%= event.proman %></option>
                                  <option value="">-</option>
                                  <option value="Pierre">Pierre</option>
                                  <option value="Esteve">Esteve</option>
                                  <option value="Julien">Julien</option>
                                </select>
                            </div>

                        </div>

                        <div class="formgroup">
                            <label>Incoming comment</label>
                            <textarea name="descriptIn" rows="5" class="form-control"><%= event.descriptIn %></textarea>
                            <h5>Currrent incomming notation : <span><%= event.notIn * 10 %></span>%</h5>
                            <input type="radio" name="notIn" value="0" id="0">
                            <input type="radio" name="notIn" value="1" id="1">
                            <input type="radio" name="notIn" value="2" id="2">
                            <input type="radio" name="notIn" value="3" id="3">
                            <input type="radio" name="notIn" value="4" id="4">
                            <input type="radio" name="notIn" value="5" id="5">
                            <input type="radio" name="notIn" value="6" id="6">
                            <input type="radio" name="notIn" value="7" id="7">
                            <input type="radio" name="notIn" value="8" id="8">
                            <input type="radio" name="notIn" value="9" id="9">
                            <input type="radio" name="notIn" value="10" id="10">
                        </div>

                        <div class="formgroup">
                            <label>Outgoing comment</label>
                            <textarea name="descriptOut" rows="5" class="form-control"><%= event.descriptOut %></textarea>
                            <h5>Current outgoing notation : <span><%= event.notOut * 10 %></span>%</h5>
                            <input type="radio" name="notOut" value="0" id="0">
                            <input type="radio" name="notOut" value="1" id="1">
                            <input type="radio" name="notOut" value="2" id="2">
                            <input type="radio" name="notOut" value="3" id="3">
                            <input type="radio" name="notOut" value="4" id="4">
                            <input type="radio" name="notOut" value="5" id="5">
                            <input type="radio" name="notOut" value="6" id="6">
                            <input type="radio" name="notOut" value="7" id="7">
                            <input type="radio" name="notOut" value="8" id="8">
                            <input type="radio" name="notOut" value="9" id="9">
                            <input type="radio" name="notOut" value="10" id="10">
                        </div>
                        <div class="form-group">
                            <button type="submit" id="subMe" class="btn btn-primary btn-md">Update database</button>
                        </div>
                    </div>
                </form>

    </div>
</div>
